{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "dom",
      "es2018"
    ],
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "strictFunctionTypes": false
  },
  "include": [
    "./src",
    "./types"
  ]
}
